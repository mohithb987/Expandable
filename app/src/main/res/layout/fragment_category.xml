<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.category.CategoryFragment">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        app:columnCount="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/officetables"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/bosstable1"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="OFFICE TABLES"
                android:textColor="#972525"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/officechairs"
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/bosstable1"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/studychair3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="OFFICE CHAIRS"
                android:textColor="#972525"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookshelves"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/bosstable1"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/engineeredshelf3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="BOOKSHELVES"
                android:textColor="#972525"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="21dp"
        android:gravity="center"
        android:text="SELECT PRODUCT CATEGORY"
        android:textColor="#673AB7"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>